<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="點餐 App"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGoToMainMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="選擇主餐" />

    <TextView
        android:id="@+id/tvMainMealSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主餐：尚未選擇"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnGoToSideDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="選擇副餐" />

    <TextView
        android:id="@+id/tvSideDishSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="副餐：尚未選擇"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnGoToDrink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="選擇飲料" />

    <TextView
        android:id="@+id/tvDrinkSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="飲料：尚未選擇"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnGoToConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="前往確認" />

    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="訂單狀態："
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>