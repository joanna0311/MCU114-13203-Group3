<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ThreadHandlerAndProgressBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 將主要顏色指向我們定義的 my_primary -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 將次要顏色指向我們定義的 my_secondary -->
        <item name="colorSecondary">@color/my_secondary</item>
        <item name="colorSecondaryVariant">@color/my_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ThreadHandlerAndProgressBar" parent="Base.Theme.ThreadHandlerAndProgressBar" />
</resources>
